#!/usr/bin/env node

// This is a wrapper script that runs the TypeScript CLI with tsx
const { spawn } = require('child_process');
const path = require('path');

const tsFile = path.join(__dirname, '..', 'src', 'cli', 'tui.ts');

const child = spawn('npx', ['tsx', tsFile, ...process.argv.slice(2)], {
  stdio: 'inherit',
  shell: true
});

child.on('exit', (code) => {
  process.exit(code);
});